    <fragment
        android:id="@+id/navigation_addStudent"
        android:name="com.example.bottomnavigation.ui.addstudent.StudentFragment"
        android:label="Add Student"
        tools:layout="@layout/fragment_student" />

    <fragment
        android:id="@+id/navigation_about_us"
        android:name="com.example.bottomnavigation.ui.about_us.About_Us_Fragment"
